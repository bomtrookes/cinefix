<header class="navbar d-flex justify-content-between p-3" data-controller="navigation">
  <%= link_to "CINEFIX", root_path, class: "btn btn-dark" %>
  <div class="navbar-menu" data-action="click->navigation#toggleMenu">
    <i class="bi bi-list"></i>
  </div>

  <nav>
    <span id="close-menu" data-action="click->navigation#toggleMenu">
      <i class="bi bi-x-circle"></i>
    </span>
    <ul>
      <% if user_signed_in? %>
        <li><%= link_to "Search", movies_path %></li>
        <li><%= link_to "Profile", user_path(current_user) %></li>
        <li><%= link_to "Watchlist", watchlists_path %></li>
      <% end %>
      <li>
        <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>
        <% else %>
          <%= link_to "Log in", new_user_session_path %>
        <% end %>
      </li>
    </ul>
  </nav>

</header>

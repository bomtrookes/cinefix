<header class="navbar d-flex justify-content-between p-3" data-controller="navigation">
  <%= link_to feed_path, class: "btn btn-dark" do %>
    <p>R<small>EEL</small>S<small>CORE</small></p>
  <% end %>
  <div class="navbar-menu" data-action="click->navigation#toggleMenu">
    <i class="bi bi-list"></i>
  </div>

  <nav>
    <span id="close-menu" data-action="click->navigation#toggleMenu">
      <i class="bi bi-x-circle"></i>
    </span>
    <ul>
      <% if user_signed_in? %>
        <li><%= link_to "Feed", feed_path %></li>
        <li><%= link_to "Search", movies_path %></li>
        <li><%= link_to "Profile", user_path(current_user) %></li>
        <li><%= link_to "Watchlist", user_watchlists_path(current_user) %></li>
        <li><%= link_to "Feedback", new_feedback_path %></li>
      <% end %>
      <li>
        <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path %></li>
          <li><%= link_to "Sign up", new_user_registration_path, id: "sign-up" %></li>
        <% end %>
      </li>
    </ul>
  </nav>

</header>
